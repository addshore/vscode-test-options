{
  "name": "test-options",
  "displayName": "test-options",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": ">=1.101.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:go",
    "workspaceContains:**/*_test.go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "test-options.recordTestTerminal",
        "title": "Record Test"
      }
    ],
    "codeLens": [
      {
        "language": "go"
      }
    ],
    "configuration": {
      "title": "Test Options",
      "properties": {
        "test-options.commandExecutable": {
          "type": "string",
          "default": "go",
          "description": "The executable to run for testing."
        },
        "test-options.commandArgsTemplate": {
          "type": "array",
          "default": [
            "test",
            "-v",
            "-run",
            "^{{testName}}$"
          ],
          "description": "Template for arguments for the base command. Use placeholders like {{testName}}, {{testFile}}, and {{testProjectPath}}.",
          "items": {
            "type": "string"
          }
        },
        "test-options.runProfileName": {
          "type": "string",
          "default": "record test",
          "description": "The name for the custom test run profile and CodeLens action."
        },
        "test-options.runProfileArgs": {
          "type": "array",
          "default": [
            "-record"
          ],
          "description": "Arguments to pass to 'go test' for the custom run profile.",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}